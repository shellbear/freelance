generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("SHADOW_DATABASE_URL")
}

enum OfferSource {
  FREEWORK
}

model Offer {
  id Int @id @default(autoincrement())

  title         String
  description   String
  minimumSalary Int?
  maximumSalary Int?

  sourceId String      @unique
  source   OfferSource

  companyId String
  company   String

  jobId String?
  job   String?

  url String

  // Location
  locationLabel       String?
  locationCity        String?
  locationRegion      String?
  locationCountry     String?
  locationCountryCode String?
  locationLatitude    String?
  locationLongitude   String?

  // Remote
  remoteMode String?

  // Skills
  skills String[]

  // Experience
  experienceLevel String?

  // Duration
  duration       Int?
  durationPeriod String?

  // Contract details
  renewable         Boolean?
  startsAt          DateTime? @db.Date
  applicationsCount Int?

  publishedAt DateTime @db.Date
  createdAt   DateTime @default(now())

  @@index([publishedAt])
  @@index([maximumSalary(sort: Desc), minimumSalary(sort: Desc)])
  @@index([company])
  @@index([job])
}
