generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("SHADOW_DATABASE_URL")
}

enum OfferSource {
  FREEWORK
}

model Offer {
  id Int @id @default(autoincrement())

  title         String
  description   String
  minimumSalary Int?
  maximumSalary Int?

  sourceId String      @unique
  source   OfferSource

  companyId String
  company   String

  jobId String?
  job   String?

  url String

  publishedAt DateTime @db.Date
  createdAt   DateTime @default(now())
}
